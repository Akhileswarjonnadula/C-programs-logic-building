//lower case to upper case
#include<stdio.h>
#include<string.h>
int main()
{
  
   char str[25];
   int i;
   printf("Enter the string: ");
   //scanf("%d", str) for now spaces
   gets(str);
 
   for(i=0;i<=strlen(str);i++){
      if(str[i]>='a'&& str[i]<='z')
         str[i]=str[i]-32;
   }
   printf("\nupper Case String is: %s",str);
   return 0;
}

