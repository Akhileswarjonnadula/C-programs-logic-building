/*Area of circle using pointers*/
#include <stdio.h>

void AreaOfCircle(float *radius, float *area){
    *area = 3.141 * (*radius) * (*radius);
}

int main()
{
    float radius, area;
    printf("enter the radius of the circle: ");
    scanf("%f", &radius);
    
    AreaOfCircle(&radius, &area);
    
    printf("Area of the circle is : %f", area);
    

    return 0;
}

