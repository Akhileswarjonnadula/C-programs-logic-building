//finding vowels in a string
#include <stdio.h>

int main()
{
    char s[50];
    int count=0;
    printf("Enter a string: ");
    fgets(s, sizeof(s), stdin);
    
    for(int i = 0; s[i] != '\0'; i++)
    {
        if(s[i] == 'a' || s[i] == 'e' || s[i] == 'i' || s[i] == 'o' || s[i] == 'u' ||
        s[i] == 'A' || s[i] == 'E' || s[i] == 'I' || s[i] == 'O' || s[i] == 'U')
            count++;
    }
    
    printf("The vowels in the are %d ", count);

    return 0;
}

