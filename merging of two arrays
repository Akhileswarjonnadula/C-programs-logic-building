//merging of two arrays
#include <stdio.h>

int main()
{
    int a[100],b[50];
    int m,n;
    printf("enter the size of array a: ");
    scanf("%d",&m);
    printf("enter the elements of array a:");
    for(int i =0;i<m;i++){
        scanf("%d",&a[i]);
    }
    printf("enter the size of array b: ");
    scanf("%d",&n);
    printf("enter the elements of array b:");
    for(int i =0;i<n;i++){
        scanf("%d",&b[i]);
    }
    for(int i=0;i<n;i++){
        a[m+i]=b[i];
    }
    printf("elements of array after merging: ");
    for(int i=0;i<m+n;i++){
        printf("%d ",a[i]);
    }

    return 0;
}


