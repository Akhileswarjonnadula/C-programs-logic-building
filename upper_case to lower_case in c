//upper_case to lower_case in c 
#include<stdio.h>
#include<string.h>
int main()
{
  
   char str[25];
   int i;
   printf("Enter the string: ");
   //scanf("%s", str); for without spaces
   gets(str);
 
   for(i=0;i<=strlen(str);i++){
      if(str[i]>='A'&& str[i]<='Z')
         str[i]=str[i]+32;
   }
   
   printf("\nLower Case String is: %s",str);
   return 0;
}



