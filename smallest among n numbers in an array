//smallest among n numbers in an array
#include <stdio.h>

int main()
{
    /*int n;
    int a[n];
    printf("enter no of elements: ");
    scanf("%d",&n);
    printf("enter the elements:");
    for(int i=0;i<n;i++){
        scanf("%d",&a[i]);
    }*/                          //for reading elements from user
    
    int arr[7]={5,2,6,1,9,3,8};
    int small=arr[0];
    for(int i = 1; i<6; i++){
        if(arr[i]<small){
            small=arr[i];
        }
    }
    
    printf("the smallest number in the array is %d ",small);

    return 0;
}

