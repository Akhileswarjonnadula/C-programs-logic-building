//digit summation
#include <stdio.h>

int main()
{
    printf("**Digit Summation**\n");
    int n,r,sum=0,temp;
    printf("enter a number: ");
    scanf("%d",&n);
    temp = n;
    
    while(n!=0){
        r = n%10;
        sum = sum+r;
        n = n/10;
    }
    n = temp;
    printf("the Summation of digit of number %d is %d",n,sum);

    return 0;
}

