//positive negitive check
#include <stdio.h>

int main()
{
    int n;
    printf("**Positive Negative Check**\n");
    printf("enter a number:");
    scanf("%d", &n);
    
    if(n!=0){
        n>0? printf("%d is a positive number",n) : printf("%d is a Negative number",n);
    }
    else{
        printf("the number is zero");
    }
    
    

    return 0;
}

