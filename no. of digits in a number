//no.of digits in a number
#include <stdio.h>

int main()
{
    int n,temp=0,count=0;
    printf("enter the number(upto 10 digits):\n");
    scanf("%d",&n);
    temp=n;
    while(n!=0){
     n=n/10;
     count++;
    }
    
    n=temp;  
    printf("the no of digits in %d is: %d ",n,count);  

    return 0;
}

