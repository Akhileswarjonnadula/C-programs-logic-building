//factorial of a number
#include <stdio.h>

int main()
{
    int n,i,fact=1;
    printf("***factorial Of A Number***\n");
    printf("enter a number:");
    scanf("%d",&n);
    
    
    if(n<0)
        printf("sorry! can't find factorial for negative number.");
    else if(n==0)
        printf("the factorial of zero is 1");
    else{
        for(i=n;i>=1;i--){
            fact = fact*i;
        }
        printf("the factorial of %d is %d", n, fact); 
    }    
    
    

    return 0;
}

