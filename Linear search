//Linear Search
#include <stdio.h>

int main()
{
    int a[50],n,x,i;
    printf("How many elements do you want in array: ");
    scanf("%d",&n);
    
    printf("enter the elements: ");
    for(int i = 0; i < n; i++){
        scanf("%d",&a[i]);
    }
    
    printf("enter the element to Search: ");
    scanf("%d",&x);
    
    for(i=0;i<n;i++)
        if(a[i]==x)
            break;
    
    if(i<n)
        printf("The element found at index %d",i);
    else
        printf("Element not found");

    return 0;
}


